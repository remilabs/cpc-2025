mkdir input output;index=0; find sample secret -type f -name '*.in' | while read in_file; do dir=$(dirname "$in_file"); num=$(basename "$in_file" .in); echo "$dir $num $in_file"; done | sort -k1,1 -k2,2n | cut -d' ' -f3 | while read in_file; do ans_file=$(dirname "$in_file")/$(basename "$in_file" .in).ans; if [ -f "$ans_file" ]; then new_in=$(printf "input/input%02d.txt" $index); new_ans=$(printf "output/output%02d.txt" $index); cp "$in_file" "$new_in"; cp "$ans_file" "$new_ans"; ((index++)); fi; done; zip -r hackerrank.zip input output; rm -r input output;
